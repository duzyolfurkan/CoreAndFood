@model CoreAndFood.Data.Models.Food
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddFood</h1>

<form class="form-group" action="AddFood" asp-controller="Food" method="post" enctype="multipart/form-data">
    @Html.Label("Food Name")
    @Html.TextBoxFor(x=>x.FoodName, new {@class = "form-control"})
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x=>x.Stock, new {@class = "form-control"})
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x=>x.Price, new {@class = "form-control"})
    <br />
    @Html.Label("Choice Image")
    <input type="file" name="ImageURL">
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.categoriesList, new { @class = "form-control"} )
    <br />
    <br />
    <button class="btn btn-success">Save</button>

</form>
